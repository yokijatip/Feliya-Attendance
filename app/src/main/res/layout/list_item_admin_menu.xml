<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_admin_menu"
    android:layout_width="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/color_background_icon_primary"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/iv_admin_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="14dp"
            android:src="@drawable/ic_folder_plus"
            app:tint="@color/dark_primary_color" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_admin_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="@font/inter_regular"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="@string/admin_menu_add_project" />


</LinearLayout>